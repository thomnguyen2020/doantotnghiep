@model IEnumerable<HanaSolution.Data.ViewModels.ProdcutCategoryView>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">

                <div class="pull-left">
                    <h1 class="title">Danh mục sản phẩm</h1>
                </div>

                <div class="pull-right hidden-xs">
                    <ol class="breadcrumb">
                        <li>
                            <a href="/"><i class="fa fa-home"></i>Dashboard</a>
                        </li>
                        <li>
                            <a href="/Product/CategoryList">Danh mục sản phẩm</a>
                        </li>
                        <li class="active">
                            <strong>Danh sách</strong>
                        </li>
                    </ol>
                </div>

            </div>
        </div>
        <div class="clearfix"></div>

        <div class="col-lg-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Danh sách</h2>
                    <div class="actions panel_actions pull-right">
                        <i class="box_toggle fa fa-chevron-down"></i>
                        <a href=""><i class="box_setting fa fa-refresh"></i></a>
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">



                            <!-- ********************************************** -->


                            <table id="example" class="display table table-hover table-condensed" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên</th>
                                        <th>Mô tả</th>
                                        <th>Rank</th>
                                        <th>Hình Ảnh</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @if (Model != null && Model.Count() > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                    <tr>
                                        <td>@item.ID</td>
                                        <td>@item.Title</td>
                                        <td>@item.Desc</td>
                                        <td>@item.Rank</td>
                                        <td><img src="@item.Avatar" style="width:200px;height:auto" /></td>
                                    </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                            <!-- ********************************************** -->




                        </div>
                    </div>
                </div>
            </section>
        </div>






    </section>
</section>

