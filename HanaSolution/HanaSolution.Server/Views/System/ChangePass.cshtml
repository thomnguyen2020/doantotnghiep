@model HanaSolution.Data.ViewModels.ChangePassView
@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section id="main-content" class="">
        <section class="wrapper main-wrapper" style="">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="page-title">

                    <div class="pull-left">
                        <h1 class="title">Đổi mật khẩu</h1>
                    </div>

                    <div class="pull-right hidden-xs">
                        <ol class="breadcrumb">
                            <li>
                                <a href="/"><i class="fa fa-home"></i>Dashboard</a>
                            </li>

                            <li class="active">
                                <strong>Đổi mật khẩu</strong>
                            </li>
                        </ol>
                    </div>

                </div>
            </div>
            <div class="clearfix"></div>


            <div class="col-lg-12">
                <section class="box nobox">
                    <div class="content-body">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                @if (Model != null && Model.Account != "")
                                {

                                    using (Html.BeginForm("ChangePass", "System", FormMethod.Post,new {id="changePassForm" }))
                                    {
                                        <div class="panel-group primary" id="accordion-2" role="tablist" aria-multiselectable="true">
                                            <div class="panel panel-default">
                                                <div class="panel-heading" role="tab" id="headingOne">
                                                    <h4 class="panel-title">
                                                        <a data-toggle="collapse" data-parent="#accordion-2" href="#collapseOne-2" aria-expanded="true" aria-controls="collapseOne-2">
                                                            <i class="fa fa-check"></i> Thông tin
                                                        </a>
                                                    </h4>
                                                </div>
                                                <div id="collapseOne-2" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                                    <div class="panel-body">
                                                        <div class="col-lg-12 col-md-8 col-sm-9 col-xs-12">

                                                            <div class="form-group">
                                                                <label class="form-label" for="field-1">Tài khoản</label>
                                                                <span class="desc"></span>
                                                                <div class="controls">
                                                                    @Html.TextBoxFor(model => model.Account, new { @class = "form-control", @readonly = "readonly" })
                                                                    @Html.ValidationMessageFor(model => model.Account)
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="form-label" for="field-5">Mật khẩu cũ</label>
                                                                <span class="desc"></span>
                                                                <div class="controls">
                                                                    @Html.TextBoxFor(model => model.OldPass, new { @class = "form-control", @placeholder = "Mật khẩu cũ",@type="Password" })
                                                                    @Html.ValidationMessageFor(model => model.OldPass)
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="form-label" for="field-5">Mật khẩu mới</label>
                                                                <span class="desc"></span>
                                                                <div class="controls">
                                                                    @Html.TextBoxFor(model => model.NewPass, new { @class = "form-control", @placeholder = "Mật khẩu mới",@type="Password" })
                                                                    @Html.ValidationMessageFor(model => model.NewPass)
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="form-label" for="field-5">Xác nhận mật khẩu</label>
                                                                <span class="desc">Nhập lại mật khẩu mới của bạn</span>
                                                                <div class="controls">
                                                                    @Html.TextBoxFor(model => model.ConfirmPass, new { @class = "form-control", @placeholder = "Xác nhận mật khẩu",@type="Password" })
                                                                    @Html.ValidationMessageFor(model => model.ConfirmPass)
                                                                </div>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>


                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 padding-bottom-30">
                                            <div class="text-left">
                                                <button type="button" onclick="Save()" class="btn btn-primary">Save</button>
                                                <button type="button" class="btn">Cancel</button>
                                            </div>
                                        </div>
                                    }

                                }


                            </div>

                        </div>
                    </div>
                </section>
            </div>


        </section>
    </section>

    <script>
    function Save() {
        var newpass = "";
        var confirmpass = "";
        newpass = $("#NewPass").val();
        confirmpass = $("#ConfirmPass").val();
        if (newpass !== confirmpass) {
            showErrorMessage("Mật khẩu nhập lại không đúng");
            $("#ConfirmPass").focus();
            return;
        }
        $("#changePassForm").submit();
    }
    </script>