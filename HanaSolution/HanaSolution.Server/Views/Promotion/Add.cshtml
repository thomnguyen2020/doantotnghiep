@model HanaSolution.Data.ViewModels.PromotionActionView
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="/Content/plugins/select2/select2.min.js" type="text/javascript"></script>
<link href="/Content/plugins/select2/select2.css" rel="stylesheet" type="text/css" media="screen" />
<link href="/Content/plugins/datepicker/css/datepicker.css" rel="stylesheet" type="text/css" media="screen" />
<script src="/Content/plugins/datepicker/js/datepicker.js" type="text/javascript"></script>
<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">

                <div class="pull-left">
                    <h1 class="title">Add a Promotion</h1>
                </div>

                <div class="pull-right hidden-xs">
                    <ol class="breadcrumb">
                        <li>
                            <a href="/"><i class="fa fa-home"></i>Home</a>
                        </li>
                        <li>
                            <a href="/Promotion/List">Promotions</a>
                        </li>
                        <li class="active">
                            <strong>Add Promotion</strong>
                        </li>
                    </ol>
                </div>

            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">PROMOTION INFO</h2>
                </header>
                <div class="content-body">
                    <div class="row">
                        @using (Html.BeginForm("Add", "Promotion", FormMethod.Post,new { id="addForm"}))
                        {
                            <div class="panel-group primary" id="accordion-2" role="tablist" aria-multiselectable="true">
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingOne">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion-2" href="#collapseOne-2" aria-expanded="true" aria-controls="collapseOne-2">
                                                <i class="fa fa-check"></i> Basic Info
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseOne-2" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                        <div class="panel-body">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Mã</label>
                                                    <span class="desc">Mã nhận biết ví dụ: Khuyến mãi nhân dịp quốc khánh 2020 có mã rút gọn là (QK20)</span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.Code, new { @class = "form-control", @placeholder = "Mã" })
                                                        @Html.ValidationMessageFor(model => model.Code)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Title</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @placeholder = "Title" })
                                                        @Html.ValidationMessageFor(model => model.Title)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Promotion Desc</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.TextAreaFor(model => model.Desc, new { @class = "form-control", @placeholder = "Desc" })
                                                        @Html.ValidationMessageFor(model => model.Desc)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-5">Status</label>
                                                    <span class="desc"></span>
                                                    <select name="Status" id="Status" class="form-control">
                                                        <option selected value="true">Hiện</option>
                                                        <option value="false">Ẩn</option>
                                                    </select>
                                                </div>
                                                <div class="form-group" id="dType">
                                                    <label class="form-label">Limit Type</label>
                                                    <select class="" id="s2example-2" multiple>
                                                        <option></option>
                                                        <optgroup label="Limit Type">
                                                            <option value="1">Giới hạn người tham gia[1]</option>
                                                            <option value="2">Giới hạn độ tuổi[2]</option>
                                                            <option value="3">Giới hạn giới tính[3]</option>
                                                            <option value="4">Giới hạn cấp độ[4]</option>
                                                            <option value="5">Giới hạn điểm thành viên[5]</option>
                                                        </optgroup>
                                                    </select>
                                                    @Html.TextBoxFor(model => model.Type, new { @class = "form-control", @placeholder = "Type", @type = "hidden" })
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="field-1">Start Date</label>
                                                        <span class="desc"></span>
                                                        <div class="controls">
                                                            <div class="controls">
                                                                <input type="text" name="StartDate" id="StartDate" readonly class="form-control datepicker" data-format="dd/mm/yyyy" value="">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="field-1">End Date</label>
                                                        <span class="desc">If there is no time limit please do not enter this data</span>
                                                        <div class="controls">
                                                            <div class="controls">
                                                                <input type="text" name="EndDate" id="EndDate" readonly class="form-control datepicker" data-format="dd/mm/yyyy" value="">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingTwo">
                                        <h4 class="panel-title">
                                            <a class="collapsed" data-toggle="collapse" data-parent="#accordion-2" href="#collapseTwo-2" aria-expanded="false" aria-controls="collapseTwo-2">
                                                <i class="fa fa-check"></i> Limit Config
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseTwo-2" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                                        <div class="panel-body">
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Start Age</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.StartAge, new { @class = "form-control", @placeholder = "StartAge", @type = "number" })
                                                        @Html.ValidationMessageFor(model => model.StartAge)
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">End Age</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.EndAge, new { @class = "form-control", @placeholder = "EndAge", @type = "number" })
                                                        @Html.ValidationMessageFor(model => model.EndAge)
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-label" for="field-1">Limit Number</label>
                                                <span class="desc"></span>
                                                <div class="controls">
                                                    @Html.TextBoxFor(model => model.Limit, new { @class = "form-control", @placeholder = "Limit Number", @type = "number" })
                                                    @Html.ValidationMessageFor(model => model.Limit)
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-label" for="field-1">Limit Gender</label>
                                                <span class="desc"></span>
                                                <div class="controls">
                                                    <select class="form-control" name="Gender" id="Gender">
                                                        <option value="-1">Không giới hạn</option>
                                                        <option value="0">Giới hạn giới tính nữ</option>
                                                        <option value="1">Giới hạn giới tính nam</option>
                                                    </select>
                                                    @Html.ValidationMessageFor(model => model.Gender)
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-label" for="field-1">Limit Member Level</label>
                                                <span class="desc"></span>
                                                <div class="controls">
                                                    @Html.TextBoxFor(model => model.MemberLevel, new { @class = "form-control", @placeholder = "Limit Member Level", @type = "number" })
                                                    @Html.ValidationMessageFor(model => model.MemberLevel)
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-label" for="field-1">Limit Member Point</label>
                                                <span class="desc"></span>
                                                <div class="controls">
                                                    @Html.TextBoxFor(model => model.MemberPoint, new { @class = "form-control", @placeholder = "Limit Member Point", @type = "number" })
                                                    @Html.ValidationMessageFor(model => model.MemberPoint)
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingThree">
                                        <h4 class="panel-title">
                                            <a class="collapsed" data-toggle="collapse" data-parent="#accordion-2" href="#collapseThree-2" aria-expanded="false" aria-controls="collapseThree-2">
                                                <i class="fa fa-check"></i> Content
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseThree-2" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
                                        <div class="panel-body">
                                            <div class="form-group">
                                                <label class="form-label" for="field-1">Avatar</label>
                                                <span class="desc"></span>
                                                <div class="controls">
                                                    <img src="~/Content/images/no-image.png" id="reviewImg" style="width:150px;height:auto;cursor:pointer" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="controls">
                                                    @Html.TextBoxFor(model => model.Avatar, new { @class = "form-control", @placeholder = "..." })
                                                </div>
                                                <script type="text/javascript">
                                                    $('#reviewImg').click(function () {
                                                        var finder = new CKFinder();
                                                        finder.selectActionFunction = function (fileUrl) {
                                                            $('#Avatar').val(fileUrl);
                                                            $('#reviewImg').attr("src", fileUrl);
                                                        };
                                                        finder.popup();
                                                    });
                                                </script>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-label" for="field-6">Content</label>
                                                <span class="desc"></span>
                                                <div class="controls">
                                                    @Html.TextAreaFor(model => model.Content, new { @class = "form-control autogrow", @placeholder = "Content" })

                                                    <script type="text/javascript">
                                                        CKEDITOR.replace("Content");
                                                    </script>
                                                    @Html.ValidationMessageFor(model => model.Content)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 padding-bottom-30">
                                <div class="text-left">
                                    <button type="button" onclick="Save()" class="btn btn-primary">Save</button>
                                    <button type="button" class="btn">Cancel</button>
                                </div>
                            </div>
                        }
                    </div>


                </div>
            </section>

        </div>



    </section>
</section>
<script>

    function Save() {
        var type = "";
        $("#dType li").each(function (index, item) {
            if ($(item).attr("class").includes("select2-search-choice")) {
                type += $(item).find("div")[0].innerHTML.split('[')[1].replace(']', '')+"|";
            }
        })

        $("#Type").val(type);
        $("#addForm").submit();
    }
</script>
