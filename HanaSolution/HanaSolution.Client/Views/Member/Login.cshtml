@model HanaSolution.Data.ViewModels.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="login-wrapper d-flex align-items-center justify-content-center text-center">
    <!-- Background Shape-->
    <div class="background-shape"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-9 col-md-7 col-lg-6 col-xl-5">
                <img class="big-logo" src="/Content/img/core-img/logo-white.png" alt="">
                <!-- Register Form-->
                <div class="register-form mt-5 px-4">

                    @using (Html.BeginForm("Login", "Member", FormMethod.Post, new { @class = "form", @id = "setting" }))
                    {
                        <div class="form-group text-left mb-4">
                            <span>Username</span>
                            <label for="username"><i class="lni-user"></i></label>
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "demo", @title = "Tên đăng nhập" })
                        </div>
                        <div class="form-group text-left mb-4">
                            <span>Password</span>
                            <label for="password"><i class="lni-lock"></i></label>
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "demo", @title = "Mật khẩu", @type = "password" })
                        </div>
                        <button type="submit" class="btn btn-success btn-lg w-100">Login</button>

                    }
                </div>
                <!-- Login Meta-->
                <div class="login-meta-data">
                    <p class="text-white mb-0">Bạn chưa có tài khoản?<a class="ml-2" href="/dang-ky.html">Đăng ký</a></p>
                </div>
            </div>
        </div>
    </div>
</div>