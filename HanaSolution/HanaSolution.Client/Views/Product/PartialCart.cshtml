@model IEnumerable<HanaSolution.Data.ViewModels.Cart>

    <div class="container">
        <!-- Cart Wrapper-->
        <div class="cart-wrapper-area py-3">
            <div class="cart-table card mb-3">
                <div class="table-responsive card-body">
                    <table class="table mb-0">
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row"><a class="remove-product" href="#"><i class="lni-close"></i></a></th>
                                        <td><img src="@item.Avatar" alt=""></td>
                                        <td><a href="#">@item.Name<span>@String.Format("{0:0,00} vnđ", item.Price) × @item.Qty</span></a></td>
                                        <td>
                                            <div class="quantity">
                                                <div class="input-group input-group-spinner" style="display: flex;justify-content: center;margin:10px 0 15px 0">
                                                    <div class="input-group-prepend" style="">
                                                        <button style="min-width: 2.5em;color: #fff;background-color: #6c757d;border-color: #6c757d;" onclick="updateCart(@item.ID,0)" class="btn btn-decrement btn-outline-secondary" type="button">
                                                            <i class="fa fa-minus-circle"></i>
                                                        </button>
                                                    </div>
                                                    <input id="n_@item.ID" style="text-align: center;border-radius: 0;border: 1px solid #33333342;width: 90px;padding-left:0 !important;" readonly value="@item.Qty" class="input">
                                                    <div class="input-group-append" style="">
                                                        <button style="min-width: 2.5em;color: #fff;background-color: #6c757d;border-color: #6c757d;" onclick="updateCart(@item.ID,1)" class="btn btn-increment btn-outline-secondary" type="button">
                                                            <i class="fa fa-plus-circle"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Coupon Area-->
            @*<div class="card coupon-card mb-3">
                <div class="card-body">
                    <div class="apply-coupon">
                        <h6 class="mb-0">Have a coupon?</h6>
                        <p class="mb-2">Enter your coupon code here &amp; get awesome discounts!</p>
                        <div class="coupon-form">
                            <form action="#">
                                <input class="form-control" type="text" placeholder="SUHA30">
                                <button class="btn btn-primary" type="submit">Apply</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>*@
            <!-- Cart Amount Area-->
            <div class="card cart-amount-area">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <h5 class="total-price mb-0">Tổng tiền:<span class="counter" id="c_total">@String.Format("{0:0,00}", Model.Sum(x => x.Total))</span> vnđ</h5>
                    <a class="btn btn-warning" href="/thanh-toan.html">Thanh Toán</a>
                </div>
            </div>
        </div>
    </div>