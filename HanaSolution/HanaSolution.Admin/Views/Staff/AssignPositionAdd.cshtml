@model HanaSolution.Data.ViewModels.AssignPositionActionView
@{
    ViewBag.Title = "AssignPositionAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">

                <div class="pull-left">
                    <h1 class="title">Phân công chức vụ</h1>
                </div>

                <div class="pull-right hidden-xs">
                    <ol class="breadcrumb">
                        <li>
                            <a href="/"><i class="fa fa-home"></i>Dashboard</a>
                        </li>
                        <li>
                            <a href="/Staff/AssignPosition">Phân công chức vụ</a>
                        </li>
                        <li class="active">
                            <strong>Thêm mới</strong>
                        </li>
                    </ol>
                </div>

            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Thông tin</h2>
                </header>
                <div class="content-body">
                    <div class="row">

                        @using (Html.BeginForm("AssignPositionAdd", "Staff", FormMethod.Post))
                        {
                            <div class="panel-group primary" id="accordion-2" role="tablist" aria-multiselectable="true">
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingOne">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion-2" href="#collapseOne-2" aria-expanded="true" aria-controls="collapseOne-2">
                                                <i class="fa fa-check"></i> Thông tin cơ bản
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseOne-2" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                        <div class="panel-body">
                                            <div class="col-lg-12 col-md-8 col-sm-9 col-xs-12">
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Nhân viên</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.DropDownListFor(model => model.StaffID, new SelectList(ViewBag.StaffList, "ID", "Name", "....Select...."), new { @class = "form-control", @placeholder = "Nhân viên" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Phòng ban</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.DropDownListFor(model => model.DepartmentID, new SelectList(ViewBag.DepartmentList, "ID", "Title", "....Select...."), new { @class = "form-control", @placeholder = "Phòng ban" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Chức vụ</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.DropDownListFor(model => model.PositionID, new SelectList(ViewBag.PositionList, "ID", "Title", "....Select...."), new { @class = "form-control", @placeholder = "Chức vụ" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Mô tả</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.TextAreaFor(model => model.Desc, new { @class = "form-control", @placeholder = "Mô tả" })
                                                        @Html.ValidationMessageFor(model => model.Desc)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-5">Trạng thái</label>
                                                    <span class="desc"></span>
                                                    <select name="Status" id="Status" class="form-control">
                                                        <option selected value="true">Hiện</option>
                                                        <option value="false">Ẩn</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 padding-bottom-30">
                                <div class="text-left">
                                    <button type="submit" class="btn btn-primary">Lưu</button>
                                    <button type="button" class="btn">Hủy</button>
                                </div>
                            </div>
                        }
                    </div>


                </div>
            </section>

        </div>



    </section>
</section>

