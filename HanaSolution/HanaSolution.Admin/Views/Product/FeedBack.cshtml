@model IEnumerable<HanaSolution.Data.ViewModels.ProductFeedbackView>
@{
    ViewBag.Title = "FeedBack";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>
        <div class="col-lg-12">
            <section class="box nobox">
                <div class="content-body">
                    <div class="row">
                        <div class="mail_content">
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12">

                                    <h3 class="mail_head">Feedback <sup>(5)</sup></h3>
                                    <i class='fa fa-refresh icon-primary icon-xs icon-orange mail_head_icon'></i>
                                </div>

                                <div class="col-md-12 col-sm-12 col-xs-12">

                                    <div class="pull-left">
                                        <div class="btn-group mail_more_btn">
                                            <button type="button" class="btn btn-default">
                                                Đã trả lời
                                            </button>
                                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu" role="menu">
                                                <li><a href="#">Tất cả</a></li>
                                                <li><a href="#">Đã xem</a></li>
                                                <li><a href="#">Chưa xem</a></li>
                                                <li><a href="#">Đã trả lời</a></li>
                                            </ul>
                                        </div>
                                    </div>


                                </div>

                                <div class="col-md-12 col-sm-12 col-xs-12 mail_list">
                                    <table class="table table-striped table-hover">
                                        @{ string sName = "Chưa xem";}
                                        @{ string sColor = "label-danger";}
                                        @{ string sClass = "unread";}
                                        @if (Model != null && Model.Count() > 0)
                                        {
                                            foreach (var item in Model)
                                            {


                                                if (item.Status == 1)
                                                {
                                                    sName = "Đã xem";
                                                    sColor = "label-primary";
                                                    sClass = "read";
                                                }

                                                if (item.Status == 2)
                                                {
                                                    sName = "Đã trả lời";
                                                    sColor = "label-success";
                                                    sClass = "read";
                                                }

                                                <tr class="@sClass">

                                                    <td class=""><div class="star"><i class='fa fa-star icon-xs icon-orange'></i></div></td>
                                                    <td class="open-view">@item.Member</td>
                                                    <td class="open-view"><span class="label @sColor">@sName</span>&nbsp;<span class="msgtext">@item.Product - @item.Comment</span></td>
                                                    <td class="open-view"><span class="msg_time">@String.Format("{0:dd/MM/yyyy hh:mm}", item.Date)</span></td>
                                                    <td><a class="btn btn-info" href="/Product/FeedBackDetail/@item.ID"><i class="fa fa-comments"></i></a></td>
                                                </tr>
                                            }
                                        }

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
</section>

