@model HanaSolution.Data.ViewModels.VoucherAddView
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="/Content/plugins/select2/select2.min.js" type="text/javascript"></script>
<link href="/Content/plugins/select2/select2.css" rel="stylesheet" type="text/css" media="screen" />
<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">

                <div class="pull-left">
                    <h1 class="title">Add a Voucher</h1>
                </div>

                <div class="pull-right hidden-xs">
                    <ol class="breadcrumb">
                        <li>
                            <a href="/"><i class="fa fa-home"></i>Home</a>
                        </li>

                        <li class="active">
                            <strong>Add Voucher</strong>
                        </li>
                    </ol>
                </div>

            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Thông Tin</h2>
                </header>
                <div class="content-body">
                    <div class="row">

                        @using (Html.BeginForm("Add", "Voucher", FormMethod.Post, new { id = "addForm" }))
                        {
                            <div class="panel-group primary" id="accordion-2" role="tablist" aria-multiselectable="true">
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingOne">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion-2" href="#collapseOne-2" aria-expanded="true" aria-controls="collapseOne-2">
                                                <i class="fa fa-check"></i> Thông tin
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseOne-2" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                        <div class="panel-body">
                                            <div class="col-lg-12 col-md-8 col-sm-9 col-xs-12">

                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Số lượng</label>
                                                    <span class="desc"></span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.LimitNumber, new { @class = "form-control", @placeholder = "Số lượng", @readonly = "readonly" })
                                                        @Html.ValidationMessageFor(model => model.LimitNumber)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-5">Hình thức giảm giá</label>
                                                    <span class="desc"></span>
                                                    <select name="Type" id="Type" class="form-control">
                                                        <option selected value="0">Giảm giá trực tiếp</option>
                                                        <option value="1">Giảm theo phần trăm</option>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Số tiền giảm</label>
                                                    <span class="desc">Nhập dữ liệu này khi hình thức giảm trực tiếp</span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.AmountReduced, new { @class = "form-control", @placeholder = "Số tiền giảm", @type = "number" })
                                                        @Html.ValidationMessageFor(model => model.AmountReduced)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-1">Phần trăm giảm</label>
                                                    <span class="desc">Nhập dữ liệu này khi hình thức giảm là theo phần trăm</span>
                                                    <div class="controls">
                                                        @Html.TextBoxFor(model => model.PercentReduced, new { @class = "form-control", @placeholder = "Phần trăm giảm", @type = "number" })
                                                        @Html.ValidationMessageFor(model => model.PercentReduced)
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label" for="field-5">Hình thức áp dụng</label>
                                                    <span class="desc"></span>
                                                    <select name="IsApplyOrder" id="IsApplyOrder" class="form-control">
                                                        <option selected value="true">Áp dụng trên hóa đơn</option>
                                                        <option value="false">Áp dụng cho sản phẩm</option>
                                                    </select>
                                                </div>
                                                <div class="form-group" id="dProduct">
                                                    <label class="form-label">Danh sách sản phẩm</label>
                                                    <span class="desc">Chỉ chọn khi khuyến mãi áp dụng cho một danh sách sản phẩm nhất định</span>
                                                    <select class="" id="s2example-22" multiple>
                                                        <option></option>
                                                        <optgroup label="Sản phẩm">
                                                            @if (ViewBag.ProductList != null)
                                                            {
                                                                foreach (var item in (List<HanaSolution.Data.ViewModels.ProductViewList>)ViewBag.ProductList)
                                                                {
                                                                    <option value="@item.ID">@item.Title-[@item.ID]</option>
                                                                }
                                                            }

                                                        </optgroup>
                                                    </select>
                                                    @Html.TextBoxFor(model => model.Product, new { @class = "form-control", @placeholder = "Sản phẩm", @type = "hidden" })
                                                </div>
                                                @Html.TextBoxFor(model => model.LimitNumber, new { @class = "form-control", @placeholder = "Số lượng voucher", @type = "hidden" })
                                                @Html.TextBoxFor(model => model.Promotion, new { @class = "form-control", @placeholder = "Khuyến mãi", @type = "hidden" })
                                                @Html.TextBoxFor(model => model.PromotionCode, new { @class = "form-control", @placeholder = "Khuyến mãi", @type = "hidden" })
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 padding-bottom-30">
                                <div class="text-left">
                                    <button type="button" onclick="Save()" class="btn btn-primary">Save</button>
                                    <button type="button" class="btn">Cancel</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>
        </div>
    </section>
</section>
<script>
    function Save() {
        var product = "";
        $("#dProduct li").each(function (index, item) {
            if ($(item).attr("class").includes("select2-search-choice")) {
                product += $(item).find("div")[0].innerHTML.split('[')[1].replace(']', '') + "|";
            }
        })

        $("#Product").val(product);
        $("#addForm").submit();
    }
</script>
