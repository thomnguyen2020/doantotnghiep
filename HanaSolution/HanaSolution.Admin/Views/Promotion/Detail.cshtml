@model HanaSolution.Data.ViewModels.PromotionActionView
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>
        <div class="col-lg-12">
            <section class="box nobox">
                <div class="content-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="mail_content">
                                <div class="row">
                                    @{ string type = "";}
                                    @if (Model != null)
                                    {
                                        if (Model.Type.Contains("1"))
                                        {
                                            type += "Giới hạn người tham gia <br>";
                                        }
                                        if (Model.Type.Contains("2"))
                                        {
                                            type += "Giới hạn độ tuổi <br>";
                                        }
                                        if (Model.Type.Contains("3"))
                                        {
                                            type += "Giới hạn giới tính <br>";
                                        }
                                        if (Model.Type.Contains("4"))
                                        {
                                            type += "Giới hạn cấp độ <br>";
                                        }
                                        if (Model.Type.Contains("5"))
                                        {
                                            type += "Giới hạn điểm thành viên <br>";
                                        }

                                        <div class="col-md-12  col-sm-12 col-xs-12 mail_view_title">

                                            <div class="pull-left">
                                                <h3 class="">@Model.Title - @Model.Code</h3>
                                            </div>

                                            <div class='pull-right'>
                                                <span class='msg_ts text-muted'>@String.Format("{0:dd/MM/yyyy hh:mm}", Model.StartDate) - @String.Format("{0:dd/MM/yyyy hh:mm}", Model.EndDate)</span>
                                            </div>

                                        </div>
                                        <div class="col-md-12  col-sm-12 col-xs-12 mail_view">
                                            <p>@Model.Desc</p>
                                            <br>

                                        </div>
                                        <div class="col-md-12  col-sm-12 col-xs-12 mail_view_attach">
                                            <h3>
                                                <i class="fa fa-tag icon-sm"></i> Hình thức giới hạn
                                            </h3><br>
                                            <p>
                                                @Html.Raw(type)
                                            </p>
                                            <h3>
                                                <i class="fa fa-cog icon-sm"></i> Giới hạn
                                            </h3><br>
                                            <p>
                                                Tuổi từ: @Model.StartAge đến @Model.EndAge
                                            </p>
                                            <p>
                                                Số lượng người tham gia: @Model.Limit
                                            </p>
                                            <p>
                                                @if (@Model.Gender == 0)
                                                {
                                                    @Html.Raw("Chỉ dành cho nữ")
                                                }
                                                @if (@Model.Gender == 1)
                                                {
                                                    @Html.Raw("Chỉ dành cho nam")
                                                }
                                                @if (@Model.Gender == -1)
                                                {
                                                    @Html.Raw("Không giới hạn giới tính")
                                                }
                                            </p>
                                            <p>
                                                Cấp độ thành viên: @Model.MemberLevel
                                            </p>
                                            <p>
                                                Điểm thành viên: @Model.MemberPoint
                                            </p>
                                        </div>
                                        <div class="col-md-12  col-sm-12 col-xs-12 mail_view_attach">
                                            <h3>
                                                <i class="fa fa-ticket icon-sm"></i> Vouchers
                                            </h3><br>

                                            @Html.Action("List", "Voucher", new { @id = Model.ID })
                                        </div>
                                    }
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </section>
        </div>


    </section>
</section>

